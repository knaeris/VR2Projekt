            </div>
            <div class="form-group">
                <label asp-for="BlogCommentPostedTime" class="control-label"></label>
                <input asp-for="BlogCommentPostedTime" class="form-control" />
                <span asp-validation-for="BlogCommentPostedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogPostId" class="control-label"></label>
                <select asp-for="BlogPostId" class="form-control" asp-items="ViewBag.BlogPostId"></select>
                <span asp-validation-for="BlogPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

